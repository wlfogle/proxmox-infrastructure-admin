{
  "package": {
    "productName": "Proxmox Infrastructure Admin",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1421",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "identifier": "com.proxmox.infrastructure.admin",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Proxmox Infrastructure Admin",
        "width": 1200,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
